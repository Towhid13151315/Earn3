    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-app.js";
        import { getFirestore, doc, onSnapshot, getDoc, updateDoc, setDoc, collection, query, where, getDocs, addDoc } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-firestore.js";

        const firebaseConfig = {
            apiKey: "AIzaSyBaxt0kpDNSp_023Ny2cNr9cdJ5uQ9Wvn0",
            authDomain: "telegram-adult--content.firebaseapp.com",
            projectId: "telegram-adult--content",
            storageBucket: "telegram-adult--content.firebasestorage.app",
            messagingSenderId: "913457221066",
            appId: "1:913457221066:web:0d5a2423123631ee249333"
        };

        const app = initializeApp(firebaseConfig);
        const db = getFirestore(app);
        const currentUserId = localStorage.getItem('primeCashUID') || "USER" + Math.floor(1000 + Math.random()*9000);
        localStorage.setItem('primeCashUID', currentUserId);

        let currentDeg = 0;

        // --- Generate 1000 Tasks ---
        const taskList = document.getElementById('taskList');
        for(let i=1; i<=1000; i++){
            const task = document.createElement('div');
            task.className = 'card-box';
            task.innerHTML = `
                <div style="text-align:left;">
                    <b style="font-size:14px;">Video Task #${i}</b><br>
                    <small style="color:var(--success);">Reward: 2.50 TK</small>
                </div>
                <button class="btn-main" onclick="watchVideo(this, 2.5)">Watch</button>
            `;
            taskList.appendChild(task);
        }

        // --- Real-time Data ---
        onSnapshot(doc(db, "users", currentUserId), (d) => {
            if(!d.exists()) return setDoc(doc(db, "users", currentUserId), { name: "AIO User", balance: 0, referCount: 0, spinsLeft: 5, referCode: "AIO"+Math.floor(100+Math.random()*899) });
            const data = d.data();
            document.getElementById('uBalance').innerText = data.balance.toFixed(2);
            document.getElementById('pName').innerText = data.name;
            document.getElementById('uRefCode').innerText = data.referCode;
            document.getElementById('refCount').innerText = data.referCount || 0;
            document.getElementById('pSpins').innerText = data.spinsLeft || 0;
        });

        // --- Video Action ---
        window.watchVideo = async (btn, reward) => {
            btn.disabled = true;
            btn.innerText = "Loading...";
            
            if (typeof show_10531705 === 'function') {
                show_10531705().then(async () => {
                    const uRef = doc(db, "users", currentUserId);
                    const snap = await getDoc(uRef);
                    await updateDoc(uRef, { balance: snap.data().balance + reward });
                    alert("Success! 2.50 TK Added.");
                    btn.innerText = "Completed";
                }).catch(() => {
                    btn.disabled = false;
                    btn.innerText = "Watch";
                });
            }
        };

        // --- Spin Action ---
        window.handleSpin = async () => {
            const uRef = doc(db, "users", currentUserId);
            const snap = await getDoc(uRef);
            if(snap.data().spinsLeft <= 0) return alert("No spins left!");

            const btn = document.getElementById('spinBtn');
            btn.disabled = true;

            show_10531705().then(() => {
                let rand = Math.random() * 100;
                let p = (rand < 40) ? {v:0, d:0} : (rand < 80) ? {v:5, d:270} : (rand < 95) ? {v:10, d:180} : {v:20, d:90};
                currentDeg += (3600 + p.d - (currentDeg % 360));
                document.getElementById('wheel').style.transform = `rotate(${currentDeg}deg)`;
                
                setTimeout(async () => {
                    await updateDoc(uRef, { balance: snap.data().balance + p.v, spinsLeft: snap.data().spinsLeft - 1 });
                    alert(p.v === 0 ? "Boom! ðŸ’£" : "You won " + p.v + " TK");
                    btn.disabled = false;
                }, 5000);
            });
        };

        window.showTab = (id, el) => {
            document.querySelectorAll('.section').forEach(s => s.classList.remove('active'));
            document.querySelectorAll('.nav-item').forEach(n => n.classList.remove('active'));
            document.getElementById(id).classList.add('active');
            el.classList.add('active');
        };

        window.copyCode = () => {
            navigator.clipboard.writeText(document.getElementById('uRefCode').innerText);
            alert("Code Copied!");
        };
    </script>
